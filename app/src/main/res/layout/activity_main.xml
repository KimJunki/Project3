<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.project3.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/cookie1" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="Chocolate Cookie" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:text="(How to make)"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/title_text_view"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_marginBottom="6dp"
            android:onClick="ingredients"
            android:text="Ingredients"
            android:id="@+id/launchActivity"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Direction"
            android:onClick="direction"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</RelativeLayout>
